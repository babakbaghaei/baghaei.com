import { NextResponse } from 'next/server';
import type { NextRequest } from 'next/server';

export function middleware(request: NextRequest) {
 const url = request.nextUrl;
 const hostname = request.headers.get('host') || '';

 // Define subdomains
 const isAdmin = hostname.startsWith('admin.');
 const isBlog = hostname.startsWith('blog.');
 const isProjects = hostname.startsWith('projects.');

 // Prevent infinite loops and internal path access
 if (url.pathname.startsWith('/_next') || url.pathname.includes('.')) {
  return NextResponse.next();
 }

 // Route admin.baghaei.com to /admin
 if (isAdmin) {
  if (url.pathname === '/login') {
   return NextResponse.rewrite(new URL('/admin/login', request.url));
  }
  return NextResponse.rewrite(new URL(`/admin${url.pathname}`, request.url));
 }

 // Route blog.baghaei.com to /blog
 if (isBlog) {
  return NextResponse.rewrite(new URL(`/blog${url.pathname}`, request.url));
 }

 // Route projects.baghaei.com to /projects
 if (isProjects) {
  return NextResponse.rewrite(new URL(`/projects${url.pathname}`, request.url));
 }

 return NextResponse.next();
}

export const config = {
 matcher: ['/((?!api|_next/static|_next/image|favicon.ico).*)'],
};
